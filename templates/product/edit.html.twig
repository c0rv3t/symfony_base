{% extends 'base.html.twig' %}

{% block title %}{{ 'title.edit' | trans }} {{ product.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="text-center mb-5">{{ 'product.edit' | trans }} {{ product.name }}</h2>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="my-3">
                            <button type="submit" class="btn btn-primary">{{ 'product.edit' | trans }}</button>
                            <a href="{{ path('product_list') }}" class="btn btn-warning">{{ 'product.cancel' | trans }}</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}