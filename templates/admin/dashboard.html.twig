{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container text-center my-5">
        <h1>Admin Dashboard</h1>
        <div class="row justify-content-md-center">
            <div class="col-12">
                <h2>Nombre de produits par catégorie</h2>
                <table class="table table-striped my-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Category</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in productsByCategory %}
                            <tr>
                                <td>{{ category.description }}</td>
                                <td>{{ category.productCount }}</td>
                            </tr>
                        {% else %}
                            <tr><td colspan="4">Aucune commande trouvée.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>

                <h2>Les 5 dernières commandes</h2>
                <table class="table table-striped my-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Client</th>
                            <th>Date</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in latestOrders %}
                            <tr>
                                <td>{{ order.user.firstName }} {{ order.user.lastName }}</td>
                                <td>{{ order.createdAt|date('d-m-Y') }}</td>
                                <td>{{ order.orderTotal | number_format(2, ',', ' ') }} €</td>
                            </tr>
                        {% else %}
                            <tr><td colspan="4">Aucune commande trouvée.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>

                <h2>Ratio de disponibilité des produits</h2>

                <div class="progress my-3 rounded-pill" style="height: 30px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: {{ inStockPercentage }}%;" aria-valuenow="{{ inStockPercentage }}" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" style="width: {{ outOfStockPercentage }}%;" aria-valuenow="{{ outOfStockPercentage }}" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: {{ preOrderPercentage }}%;" aria-valuenow="{{ preOrderPercentage }}" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

                <div class="d-flex justify-content-around my-3 text-white">
                    <span class="badge bg-success rounded-pill">En stock: {{ inStockPercentage | number_format(0) }}%</span>
                    <span class="badge bg-danger rounded-pill">Rupture de stock: {{ outOfStockPercentage | number_format(0) }}%</span>
                    <span class="badge bg-warning rounded-pill">Précommande: {{ preOrderPercentage | number_format(0) }}%</span>
                </div>

                <h2>Montant total des ventes par mois (12 derniers mois)</h2>
                <table class="table table-striped my-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Mois</th>
                            <th>Profits</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for monthData in monthlySales %}
                            <tr>
                                <td>{{ monthData.month }}</td>
                                <td>{{ monthData.totalSales | number_format(2, ',', ' ') }} €</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}