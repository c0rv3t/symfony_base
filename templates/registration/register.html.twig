{% extends 'base.html.twig' %}

{% block title %}{{ "navbar.register" | trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-11 col-md-10 col-lg-8">
            <h1 class="text-center my-4">{{ "register.registration" | trans }}</h1>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.firstName, { label: "register.first_name" | trans }) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.lastName, { label: "register.last_name" | trans }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.email, { label: "register.email" | trans }) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, { label: "register.password" | trans }) }}
                </div>

                <button type="submit" class="btn btn-primary">{{ "register.registration" | trans }}</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
