{% extends 'base.html.twig' %}

{% block title %}{{ "title.login" | trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-11 col-md-10 col-lg-8">
            <h1 class="text-center my-4">{{ "login.log" | trans }}</h1>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email">{{ "login.email" | trans }}</label>
                    <input type="email" id="email" name="_username" class="form-control" placeholder="email@mail.com" value="{{ last_username }}" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">{{ "login.password" | trans }}</label>
                    <input type="password" id="password" name="_password" class="form-control" placeholder="Pass123." required>
                </div>
                <button type="submit" class="btn btn-primary">{{ "login.log" | trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}
